<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="top">

        <!-- SuperG Status Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/statusSuperG"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/status_circle_red"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:text="SuperG TX"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Controller Status Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/statusController"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/status_circle_red"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:text="Controller"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvControllerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="invisible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvHint"
            android:text="Move sticks / triggers. SuperG via OTG."
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
            
        <!-- Debug Control Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            
            <Button
                android:id="@+id/btnRefreshDevices"
                android:text="Refresh"
                android:textColor="#FFFFFF"
                android:backgroundTint="#444444"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginEnd="4dp"/>
                
            <Button
                android:id="@+id/btnCycleDevices"
                android:text="Next Device"
                android:textColor="#FFFFFF"
                android:backgroundTint="#444444"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginEnd="4dp"/>
                
            <Button
                android:id="@+id/btnDumpAllDevices"
                android:text="Dump All"
                android:textColor="#FFFFFF"
                android:backgroundTint="#444444"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginEnd="4dp"/>
                
            <Button
                android:id="@+id/btnToggleRawMode"
                android:text="Force Enable dm8150"
                android:textColor="#FFFFFF"
                android:backgroundTint="#666600"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"/>
        </LinearLayout>
        
        <!-- Second row of debug buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            
            <Button
                android:id="@+id/btnTestRoot"
                android:text="Test Root"
                android:textColor="#FFFFFF"
                android:backgroundTint="#880088"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginEnd="4dp"/>
                
            <Button
                android:id="@+id/btnRootDetect"
                android:text="Root Detect"
                android:textColor="#FFFFFF"
                android:backgroundTint="#008800"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvRoll"
            android:text="ROLL: 0.00"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPitch"
            android:text="PITCH: 0.00"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvYaw"
            android:text="YAW: 0.00"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvThr"
            android:text="THR: 0.00"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Debug Gamepad Input Display -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:padding="16dp"
        android:background="#22FFFFFF">

        <TextView
            android:text="GAMEPAD DEBUG"
            android:textColor="#FFFF00"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvGamepadDevice"
            android:text="Device: None"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvGamepadButtons"
            android:text="Buttons: ---"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvGamepadAxes"
            android:text="Axes: ---"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvGamepadTriggers"
            android:text="Triggers: ---"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Enhanced Debug Panel -->
    <ScrollView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="8dp"
        android:background="#33000000">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:text="DEVICE DETAILS"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvDeviceDetails"
                android:text="Press 'Next Device' to cycle through input devices"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
    
    <!-- Real-time Axis Monitor -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="#33000000">

        <TextView
            android:text="AXIS MONITOR"
            android:textColor="#FF8800"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvRawAxes"
            android:text="Scanning for devices with motion ranges..."
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>
